    <style>
        @@keyframes scroll-left {
            0% {
                transform: translateX(100%);
                animation-timing-function: ease-in; /* Fast start */
            }

            5% {
                transform: translateX(0%); /* Reach normal position in 2s */
                animation-timing-function: linear;
            }

            100% {
                transform: translateX(-100%);
                animation-timing-function: linear; /* Slow continuous scroll */
            }
        }

        .scrolling-wrapper {
            overflow: hidden;
            background-color: #004aad;
            color: white;
            padding: 10px 0;
            white-space: nowrap;
            font-weight: bold;
            font-size: 16px;
            position: relative;
        }

        .scrolling-content {
            display: inline-block;
            padding-left: 100%;
            animation: scroll-left 32s ease-in-out infinite; /* 2s fast + 30s slow */
        }

        .navbar-nav {
            margin: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;        
            gap: 15px; /* Space between menu items */
        }

            /* Default menu style */
            .navbar-nav .nav-item {
                position: relative;
                transition: color 0.3s ease-in-out;
            }

                /* Active or hovered menu item */
                .navbar-nav .nav-item:hover .nav-link,
                .navbar-nav .nav-item.active .nav-link {
                    color: #46b7de !important;
                }

            /* Make other items black when hovering over one */
            .navbar-nav:hover .nav-item:not(:hover) .nav-link {
                color: black !important;
                opacity: 0.5;
            }

            /* Add a bottom border effect on hover */
            .navbar-nav .nav-item .nav-link {
                position: relative;
                padding: 10px 15px;
                transition: all 0.3s ease-in-out;
                font-weight: bolder;
                font-size: medium;
            }

                /* Underline effect */
                .navbar-nav .nav-item .nav-link::after {
                    content: "";
                    display: block;
                    height: 3px;
                    width: 0;
                    background-color: #46b7de;
                    position: absolute;
                    bottom: -5px;
                    left: 50%;
                    transition: width 0.3s ease-in-out, left 0.3s ease-in-out;
                }

            /* Expand underline when hovered */
            .navbar-nav .nav-item:hover .nav-link::after {
                width: 100%;
                left: 0;
            }



    </style>



