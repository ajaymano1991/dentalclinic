    <script>
        $(document).ready(function () {
            // Smooth scrolling for same-page links
            $("a[href^='#']").on("click", function (e) {
                e.preventDefault();
                var target = $($(this).attr("href"));

                if (target.length) {
                    $("html, body").animate({
                        scrollTop: target.offset().top - 50 // Adjust based on navbar height
                    }, 1200, "easeInOutExpo"); // Smooth easing effect
                }
            });

            // Smooth scrolling after page reload if hash exists
            if (window.location.hash) {
                var target = $(window.location.hash);
                if (target.length) {
                    $("html, body").animate({
                        scrollTop: target.offset().top - 50
                    }, 1200, "easeInOutExpo");
                }
            }
        });
    </script>




