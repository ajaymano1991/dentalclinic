@model DentalClinicReservationAndManagementSystem.Dentist
@{
    ViewBag.Title = "Dentist Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure it uses the main layout
}

<div class="container d-flex justify-content-center align-items-center vh-80">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5">
            <!-- Increased width -->
            <div class="card shadow-lg border-1 rounded-lg p-4">
                <!-- Added padding -->
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h4 class="font-weight-bold text-primary">Dentist's Login</h4>
                    </div>

                    @using (Html.BeginForm("DentistLogin", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="font-weight-bold">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Password" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <button class="btn btn-primary btn-block rounded-pill py-2" type="submit">
                            <i class="fas fa-sign-in-alt"></i> Sign in
                        </button>

                        <hr class="my-4">

                        @*<div class="text-center">
                            <a href="#" class="small text-primary">Forgot password?</a>
                        </div>*@
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
