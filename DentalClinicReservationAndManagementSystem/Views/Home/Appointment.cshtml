@model DentalClinicReservationAndManagementSystem.Models.Appointment
@{
    ViewBag.Title = "Appointment";
    Layout = null;
}
@using DentalClinicReservationAndManagementSystem.Models;
@using System.Globalization;

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-primary" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="@Html.ActionLink("Home","Index","Home")">Dental <span>Care</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>
        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item nav-link"> @Html.ActionLink("Home", "Index", "Home", new { Style = "color:White" })</li>
                <li class="nav-item nav-link"> @Html.ActionLink("About", "About", "Home", new { Style = "color:White" })</li>
                <li class="nav-item nav-link"> @Html.ActionLink("Services", "Services", "Home", new { Style = "color:White" })</li>
                <li class="nav-item nav-link"> @Html.ActionLink("Dentists", "Dentists", "Home", new { Style = "color:White" })</li>
                <li class="nav-item cta nav-link"> @Html.ActionLink("Make an Appointment", "Index", "Home", new { Style = "color:White" })</li>
                <li class="nav-item cta nav-link"> @Html.ActionLink("Dentist Arena", "DentistLogin", "Home", new { Style = "color:White" })</li>
                <li class="nav-item cta nav-link"> @Html.ActionLink("Patient Arena", "PatientLogin", "Home", new { Style = "color:White" })</li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    @using (Html.BeginForm("Appointment", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h5 class="card-title text-center">Patient's New Account</h5>
                        <form class="form-signin">
                            <div class="form-label-group">
                                @{
                                    List<SelectListItem> dlist = new List<SelectListItem>();
                                    foreach (Dentist d in ViewBag.dentistList)
                                    {
                                        dlist.Add(new SelectListItem { Text = d.name, Value = d.name });
                                    }
                                }
                                @Html.DropDownList("name", dlist)
                            </div>
                            <br /> <br />
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Create New Account</button>
                            <hr class="my-4">
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div>

</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="../../Content/js/main.js"></script>
}

