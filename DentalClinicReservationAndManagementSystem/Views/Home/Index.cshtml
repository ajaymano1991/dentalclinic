<section id="appointment-section" class="ftco-section py-5 mt-5" style="background: linear-gradient(to right, #3acfd5 0%, #3a4ed5 100%); color: white;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-white text-uppercase">Appointment</h2>
            <p class="text-light">Book your visit or get updates – all in one place.</p>
        </div>
        <div class="row no-gutters">
            <div class="col-md-3 d-flex align-items-stretch">
                <div class="dental-news-container">
                    <h2 class="news-heading">😊 Bright Smiles, Happy Lives!</h2>

                    @if (ViewBag.DentalNews != null && ViewBag.DentalNews.Count > 0)
                    {
                        <div class="scroll-container">
                            <ul class="scroll-content">
                                @foreach (var news in ViewBag.DentalNews)
                                {
                                    <li><h6>@news.Description</h6></li>
                                }

                            </ul>
                        </div>
                    }
                    else
                    {
                        <p class="no-news">No dental news available.</p>
                    }
                </div>

            </div>
            <div class="col-md-6 d-flex align-items-stretch ">
                <div class="consultation consul w-100 px-4 px-md-5">
                    <div class="text-center">
                        <h3 class="mb-4">Make An Appoinment</h3>
                    </div>
                    @model DentalClinicReservationAndManagementSystem.Models.Appointment
                    @using DentalClinicReservationAndManagementSystem.Models
                    @using (Html.BeginForm("TakeAppointment", "Home", FormMethod.Post, new { @class = "appointment-form well well-lg" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Patient Name -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Full Name</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.TextBoxFor(model => model.PatientName, new { @class = "form-control", @placeholder = "Enter your full name", required = "required" })
                                    </div>
                                </div>
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Mobile Number</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "Enter your phone number", required = "required" })
                                    </div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter your email", required = "required" })
                                    </div>
                                </div>
                            </div>

                            <!-- Reason for Appointment -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Reason for Appointment</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                        @Html.DropDownListFor(model => model.ReasonForAppointment, new SelectList(new[]
                                        {
                                            "ROUTINE DENTAL CHECKUP",
                                            "ROOT CANAL THERAPY",
                                            "DENTAL EXTRACTION AND IMPACTION",
                                            "CROWNS AND BRIDGE",
                                            "DENTURES",
                                            "DENTAL IMPLANTS",
                                            "DIGITAL SMILE DESIGNING",
                                            "FULL MOUTH REHABILITATION",
                                            "GUM DISEASE TREATMENT",
                                            "LASER TREATMENT",
                                            "ORTHODONTIC – BRACES",
                                            "CLEAR ALIGNERS",
                                            "PEDIATRIC DENTISTRY",
                                            "OTHERS"
                                        }), "Select a reason", new { @class = "form-control", required = "required", style = "color: black;" })
                                    </div>
                                </div>
                            </div>

                            <!-- Preferred Date & Time -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Preferred Date & Time</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                        @Html.TextBoxFor(model => model.PreferredDateTime, new { @class = "form-control", @type = "datetime-local", required = "required" })
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="glyphicon glyphicon-check"></i> Make Appointment
                                </button>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-md-3 d-flex align-items-stretch">
                <div class="consultation w-100 text-center px-4 px-md-5">
                    <h3 class="mb-4">Today's Appointments</h3>
                    <p></p>
                    <div>
                        @if (ViewBag.TodaysAppointments != null && ViewBag.TodaysAppointments.Count > 0)
                        {
                            <div class="scroll-container">
                                <ul class="scroll-content">
                                    @foreach (var appointment in ViewBag.TodaysAppointments)
                                    {
                                        <li><h3>@appointment.PreferredDateTime.ToString("yyyy-MM-dd HH:mm")</h3></li>
                                    }
                                </ul>
                            </div>
                        }
                        else
                        {
                            <p>No appointments for today.</p>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
