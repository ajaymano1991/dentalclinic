<style>
    .transparent-input {
        background: transparent !important;
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: white !important;
    }

        .transparent-input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    .custom-submit {
        background-color: #90EE90 !important; /* Light Green */
        border: none;
        color: black;
    }

        .custom-submit:hover {
            background-color: #7CFC00 !important; /* Slightly darker green on hover */
        }

    .rating i {
        font-size: 24px;
        color: black;
        cursor: pointer;
        transition: color 0.4s;
    }

    @@keyframes shake {
        0% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-3px);
        }

        50% {
            transform: translateX(3px);
        }

        75% {
            transform: translateX(-3px);
        }

        100% {
            transform: translateX(0);
        }
    }

    .rating i.shake {
        animation: shake 0.3s ease;
    }

    .rating i.text-warning {
        color: gold !important; /* Highlight selected teeth */
    }

    .img-wrap img {
        transition: transform 0.3s ease-in-out;
    }

        .img-wrap img:hover {
            transform: scale(1.5);
        }

    .appointment-form {
        background: #0056b3;
        border-radius: 12px;
        box-shadow: 0px 5px 20px rgba(255, 255, 255, 0.8); /* Soft white shadow */
        padding: 30px;
    }

    .form-control option {
        color: black !important; /* Ensures options have black text */
    }

    .appointment-form .input-group-text {
        background: #007bff;
        color: #fff;
        border: none;
    }

    .appointment-form .btn-primary {
        background: #007bff;
        border: none;
        transition: 0.3s;
    }

        .appointment-form .btn-primary:hover {
            background: #0056b3;
        }

    h2 {
