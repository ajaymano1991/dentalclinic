                var name = $(this).data('name');
                var position = $(this).data('position');
                var image = $(this).data('image');
                var description = $(this).data('description');

                // Debugging - Check if values are correctly retrieved
                console.log("Name:", name);
                console.log("Position:", position);
                console.log("Image:", image);
                console.log("Description:", description);

                // Update modal content
                $('#doctorName').text(name);
                $('#doctorPosition').text(position);
                $('#doctorImage').attr('src', image);
                $('#doctorDescription').text(description);

                // Show modal manually (Bootstrap requires this sometimes)
                $('#doctorModal').modal('show');
            });


        });

        document.addEventListener("DOMContentLoaded", function () {
            const teeth = document.querySelectorAll(".rating .fa-tooth");
            const ratingInput = document.getElementById("ratingValue");

            teeth.forEach(tooth => {
                tooth.addEventListener("click", function () {
                    const value = this.getAttribute("data-value");
                    ratingInput.value = value;

                    // Remove previous styles
                    teeth.forEach(t => {
                        t.classList.remove("text-warning", "shake");
                    });

                    // Apply shake and color to selected teeth
                    for (let i = 0; i < value; i++) {
                        teeth[i].classList.add("text-warning", "shake");

                        // Remove shake effect after animation completes
                        setTimeout(() => {
                            teeth[i].classList.remove("shake");
                        }, 300);
                    }
                });
            });
        });
    </script>
