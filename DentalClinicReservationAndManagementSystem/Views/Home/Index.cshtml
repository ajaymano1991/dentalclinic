        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .info {
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid #ddd;
        display: flex;
        align-items: flex-start;
    }

        .info:last-child {
            border-bottom: none;
        }

    .icon {
        font-size: 24px;
        margin-right: 15px;
        color: #007bff;
    }

    .details {
        flex-grow: 1;
    }

    a {
        text-decoration: none;
        color: #007bff;
    }

    .scroll-container {
        height: 150px; /* Adjust height as needed */
        overflow: hidden;
        position: relative;
    }

    .scroll-content {
        display: block;
        animation: scrollUp 10s linear infinite; /* Adjust speed */
    }

    .dental-news-container {
        width: 100%;
        max-width: 500px;
        text-align: center;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: #46b7de;
    }

    .news-heading {
        font-size: 20px;
        color: #fff;
        margin-top: 40px;
        margin-bottom: 15px;
    }

    .scroll-container {
        height: 200px;
        overflow: hidden;
        position: relative;
        padding: 10px;
    }

    .scroll-content {
        list-style: none;
        padding: 0;
        margin: 0;
        position: absolute;
        animation: scrollUp 12s linear infinite;
    }

        .scroll-content li {
            padding: 10px;
            margin-bottom: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            white-space: nowrap;
            color: white;
            font-size: 20px;
        }

    @@keyframes scrollUp {
        0% {
            transform: translateY(0%);
        }

        100% {
            transform: translateY(-50%);
        }
    }

    @@keyframes scrollUp {
        from {
            transform: translateY(100%);
        }

        to {
            transform: translateY(-100%);
        }
    }

    .staff .img-wrap {
        width: 160px; /* Circle size */
        height: 160px;
        overflow: hidden;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease-in-out;
        position: relative;
    }

        .staff .img-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.3s ease-in-out;
        }

        .staff .img-wrap:hover {
            border-radius: 10px; /* Rectangle on hover */
            width: 180px; /* Increase size */
            height: 280px;
            position: absolute;
            z-index: 10; /* Ensures it appears above other content */
        }

            .staff .img-wrap:hover img {
                width: 100%;
                height: 100%;
                object-fit: contain; /* Ensures full image is visible */
                object-position: center top; /* Focus on upper part (head) */
            }

    @@media (max-width: 768px) {
        .slider-item {
            height: 80vh !important;
        }

        .text {
            max-width: 90%;
            padding: 20px !important;
        }

        h1 {
            font-size: 6vw !important;
        }

        h3 {
            font-size: 3vw !important;
        }
    }

    @@media (max-width: 480px) {
        .slider-item {
            height: 60vh !important;
        }

        h1 {
            font-size: 7vw !important;
        }

        h3 {
            font-size: 4vw !important;
        }
    }
</style>
