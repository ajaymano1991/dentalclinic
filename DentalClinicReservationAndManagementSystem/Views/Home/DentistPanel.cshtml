@using DentalClinicReservationAndManagementSystem.Models;
@{
    ViewBag.Title = "Dentist Panel";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dentist Panel</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        :root {
            --bg-main: #f4f6f9;
            --bg-sidebar: linear-gradient(to bottom, #1976d2, #0d47a1);
            --text-color: white;
        }

        body.dark-mode {
            --bg-main: #1e1e2f;
            --bg-sidebar: linear-gradient(to bottom, #2e3a59, #151929);
            --text-color: #fff;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-main);
            transition: background 0.3s ease;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background: var(--bg-sidebar);
            color: var(--text-color);
            transition: all 0.3s ease;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar-header {
            padding: 20px;
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            font-size: 18px;
            font-weight: bold;
            transition: all 0.3s;
        }

        .sidebar.collapsed .sidebar-header {
            font-size: 0;
            padding: 15px 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li a {
            display: flex;
            align-items: center;
            color: white;
            padding: 12px 20px;
            text-decoration: none;
            transition: background 0.3s;
        }

        .sidebar ul li a i {
            width: 25px;
            text-align: center;
        }

        .sidebar ul li a.active, .sidebar ul li a:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .sidebar.collapsed ul li a span {
            display: none;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .top-navbar {
            background: #1565c0;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: -20px -20px 20px -20px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: 999;
        }

        .overlay.active {
            display: block;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                z-index: 1000;
                top: 0; left: 0;
                transform: translateX(-100%);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .sidebar.collapsed {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0 !important;
            }
        }

        .fade-content {
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .fade-content.show {
            opacity: 1;
        }
        #calendar {
            max-width: 100%;
            font-size: 12px;
            margin: 0 auto;
        }

        .fc .fc-daygrid-day-number {
            font-size: 11px;
        }

        .fc-event {
            font-size: 10px;
            padding: 1px 2px;
        }
    </style>
</head>
<body>
    <div class="overlay" id="overlay"></div>

    <div class="wrapper">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">Welcome<br /></div>
            <ul>
                <li><a href="#" id="loadDashboard"><i class="fas fa-home"></i><span> Dashboard</span></a></li>
                <li><a href="#"><i class="fas fa-users"></i><span> Patient List</span></a></li>
                <li><a href="#"><i class="fas fa-notes-medical"></i><span> Prescriptions</span></a></li>
                <li><a href="#" id="loadAppointments"><i class="fas fa-calendar-check"></i><span> Appointments</span></a></li>
                <li><a href="#"><i class="fas fa-file-medical"></i><span> Create Prescription</span></a></li>
            </ul>
        </div>

        <div class="main-content" id="mainContent">
            <div class="top-navbar">
                <div>
                    <button class="btn btn-default" id="sidebarToggle"><i class="fa fa-bars"></i></button>
                    <span style="margin-left: 10px; font-weight: bold;">Admin Panel</span>
                </div>
                <div>
                    <button class="btn btn-secondary" id="darkModeToggle"><i class="fa fa-moon"></i></button>
                    <button class="btn btn-default">@Html.ActionLink("Home", "DentistPanel", "Home")</button>
                    <button class="btn btn-danger">@Html.ActionLink("Logout", "Logout", "Home")</button>
                </div>
            </div>
            @*<div id="calendar" style="width:500px;height:100px;"></div>*@
            <div id="appointmentsContainer" class="fade-content">
                
                @* AJAX content loaded here *@
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js"></script>

    <script>
        $(function () {
            let currentView = '@Url.Action("Dashboard", "Home")';

            function loadContent(url) {
                currentView = url;
                $("#appointmentsContainer").removeClass("show");
                $.get(url, function (data) {
                    $("#appointmentsContainer").html(data).addClass("show");
                    updateActiveMenu(url);
                });
            }

            function updateActiveMenu(url) {
                $("ul li a").removeClass("active");
                if (url.includes("Dashboard")) $("#loadDashboard").addClass("active");
                if (url.includes("AppointmentList")) $("#loadAppointments").addClass("active");
            }

            loadContent(currentView); // Initial load

            $("#loadDashboard").click(function (e) {
                e.preventDefault();
                loadContent('@Url.Action("Dashboard", "Home")');
            });

            $("#loadAppointments").click(function (e) {
                e.preventDefault();
                loadContent('@Url.Action("AppointmentList", "Home")');
            });

            $("#sidebarToggle").click(function () {
                const sidebar = $("#sidebar");
                if ($(window).width() <= 768) {
                    sidebar.toggleClass("active");
                    $("#overlay").toggleClass("active");
                } else {
                    sidebar.toggleClass("collapsed");
                }
            });

            $("#overlay").click(function () {
                $("#sidebar").removeClass("active");
                $(this).removeClass("active");
            });

            // Dark mode toggle
            $("#darkModeToggle").click(function () {
                $("body").toggleClass("dark-mode");
            });

            // Swipe to open sidebar on mobile
            let startX = 0;
            $(document).on("touchstart", function (e) {
                startX = e.originalEvent.touches[0].clientX;
            });

            $(document).on("touchend", function (e) {
                let endX = e.originalEvent.changedTouches[0].clientX;
                if (endX - startX > 100 && $(window).width() <= 768) {
                    $("#sidebar").addClass("active");
                    $("#overlay").addClass("active");
                }
            });
        });
    </script>
